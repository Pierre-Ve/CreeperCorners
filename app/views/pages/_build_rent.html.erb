
<div class="card m-2 position-static" style="width: 16rem;">
  <div class="position-relative">
    <img class="card-img-top" src="https://minecraft.fr/wp-content/uploads/2023/04/les-20-etapes-cles-pour-reussir-dans-un-nouveau-monde-minecraft-le-guide-ultime.jpg" alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title"><%= link_to build.title, build_path(build),class: "text-decoration-none text-dark stretched-link" %></h5>
      <p class="card-text"><%= build.category %></p>
      <div class="d-flex justify-content-between">
        <div class="d-flex">
          <i class="fa-solid fa-cubes m-1"></i>
          <p class="card-text"><%= build.surface %></p>
        </div>
        <div class="d-flex">
          <i class="fa-solid fa-gem m-1"></i>
          <p class="card-text"><%= build.price %></p>
        </div>
      </div>
    </div>
  </div>
  <div class="p-2">
  <%= link_to name, lien, class: "btn btn-primary w-100" %>
  </div>
</div>
